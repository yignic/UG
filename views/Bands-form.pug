.container
  form#band-form.Band_form(name='bandregistration'  method='post' action='/band/bandform'  enctype='multipart/form-data' )
    h2 Bands&apos;s Form
    .form-control
      label(for='firstname') Name:
      br
      input.bandname(type='text' placeholder='Band-name' name='bandname')
      br
    small#name-error
    .form-control
      label(for='ownername') Owner:
      br
      input.ownername(type='text' placeholder="owner's name" name='owner')
      br
    small#owner-error
    .form-control
      label(for='bandname') Band Home:
      br
      input.bandhome(type='text' placeholder='Band home' name='bandhome')
      br
    small#home-error
    .form-control
      label(for='slogan') Slogan:
      br
      input.slogan(type='text' placeholder='slogan' name='slogan')
      br
    small#slogan-error
    .form-control
      label(for='') Icon
      input.icon(type='image' placeholder='Insert Band-icon' name='icon')
      br
    small#icon-error
    .form-control
      label(for='sponsors') Names of sponsors:
      br
      input.sponsors(type='text' placeholder='sponsors' name='sponsors')
      br
    small#sponsors-error
    .form-control
      label(for='Date') Date of formation:
      br
      input.DOF(type='date' placeholder='Date of formation' name="dateofformation" )
      br
    small#dof-error
    .form-control
      label(for='crown') Crowns :
      br
      input.Crowns(type='text' placeholder='Crowns if Any' name='crowns')
      br
    small#crowns-error
    .form-control
      label(for='Albums') Number of Members:
      br
      input.number(type='number' placeholder='Number of Members' name='number')
      br
    small#number-error
    .form-control
      label(for='category') Category of music:
      br
      input.Category(type='text' placeholder='eg kaddongo kamu, ragga' name="category")
      br
    small#Category-error
    input(type='submit' value='Submit')
